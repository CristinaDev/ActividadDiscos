@model IEnumerable<ActividadDiscos.ViewModels.PuntuacionesViewModel>

@{
    ViewBag.Title = "GetPuntuaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="lead">Puntuaciones registradas:</h3>

<p>
    @Html.ActionLink("CreateNew", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <td><strong>Cliente</strong></td>
            <td><strong>Disco</strong></td>
            <td><strong>Puntuación</strong></td>
            <td><strong>@Html.DisplayNameFor(model => model.Fecha)</strong></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(value => item.IdCliente)</td>
                <td>@Html.DisplayFor(value => item.TituloDisco)</td>
                <td>@Html.DisplayFor(value => item.PuntuacionVal)</td>
                <td>@Html.DisplayFor(value => item.Fecha)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>